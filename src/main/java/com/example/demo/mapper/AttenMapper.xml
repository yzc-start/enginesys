<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.AttenMapper">

<!--添加考勤-->
    <insert id="addEngine" parameterType="com.example.demo.model.Engine">
        insert into attendance (gcmc,dz,gcys,sjcb,isdelete) values(#{gcmc},#{dz},#{gcys},#{sjcb},0)
    </insert>

<!--删除工程-->
    <update id="deleteEngine" parameterType="int">
        update attendance set isdelete = 1 where id = #{id}
    </update>

<!--    修改工程-->
    <update id="updateEngine" parameterType="com.example.demo.model.Engine">
        update attendance set gcmc = #{gcmc},dz = #{dz} where id = #{id}
    </update>

<!--    查询工程-->
    <select id="selectEngine" resultType="com.example.demo.model.Engine">
        select * from attendance where isdelete = 0
    </select>


</mapper>